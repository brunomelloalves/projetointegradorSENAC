@model Usuario
@{
    ViewData["Title"] = "Login";
}

<form method="POST" asp-action="Login">
    
    <p> 
        <label asp-for="Login">Informe seu login:</label>
        <input asp-for="Login">
    </p>
    <p> 
        <label asp-for="Senha">Informe sua Senha:</label>
        <input asp-for="Senha" type="password">
    </p>
    

    <p>
        <input type="submit" value="Acessar">
    </p>
    <p>
        @ViewBag.Mensagem        
    </p>
</form>