@model Orcamento
@{
    ViewData["Title"] = "Cadastro Orçamento";
}

<body>
    <div class="container-fluid col-12">

        <div class="row">
            <div class="col-sm-12 col-md-12 col-xl-12">
                <div class="formularios">
                    <h4>Peça seu orçamento</h4>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-xl-12">
                <div class="caixa">
                    <div class="interno">
                        <div>
                            <form method="POST" asp-action="Cadastrar" class="table">

                                <div>
                                    <p id="form-group">
                                        <label asp-for="qtdPessoas">Quantidade de Pessoas?</label>
                                        <input type="text" asp-for="qtdPessoas" class="form-control" required />
                                    </p>
                                </div>

                                <div>
                                    <p>
                                    <div class="form-group">
                                        <input type="checkbox" class="table" asp-for="sub" />
                                        <label class="form-check-label" for="sub">Acrecentar SubWoofer:</label>
                                    </div>
                                </div>

                                <div>
                                    <div class="form-group">
                                        <input type="checkbox" class="table" asp-for="iluminacao" />
                                        <label class="form-check-label" for="iluminacao">Acrecentar
                                            iluminação:</label>
                                    </div>
                                </div>
                                </p>
                                <p id="form-group">
                                    <label asp-for="dataEvento">Informe a data de seu evento:</label>
                                    <input asp-for="dataEvento">
                                </p>
                                <div id="form-group">
                                    <label for="mensagem">Mensagem</label>
                                    <input input type="text" asp-for="mensagem" cols="30" rows="10" id="mensagem"
                                        class="form-control">
                                </div>
                                <p id="form-group">
                                    <input type="submit" value="Cadastrar">
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
</body>