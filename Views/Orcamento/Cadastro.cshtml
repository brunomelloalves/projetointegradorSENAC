@model Orcamento
@{
    ViewData["Title"] = "Cadastro Orçamento";
}

<section class="parallax main_products container" id="Cadastrar">


   <header class="bg">
    <img src="..\fotos\bsoundlogo.png" id="logo">
    <div class="container">
        <h4>"O que você precisa para o seu evento acontecer!!"</h4>
    </div>
    
    <h4>Peça seu orçamento</h4>


    <form method="POST" asp-action="Cadastrar" class="table">


        <div>
            <p id="form1">
                <label asp-for="qtdPessoas">Quantidade de Pessoas?</label>
                <input asp-for="qtdPessoas">
            </p>

        </div>
        <div>
            <p id="form1">Deseja acrecentar SubWoofer?</p>

            <label for="radio-sub"> <input type="radio" name="sub" value="sub" id="radio-sub"> Sim</label>


            <label for="radio-subnao"><input type="radio" name="sub" value="subnao" id="radio-subnao"> Não</label>

        </div>

        <div>
            <p id="form1">Deseja acrecentar iluminação?</p>

            <label for="radio-iluminacao"> <input type="radio" name="iluminacao" value="iluminacao"
                    id="radio-iluminacao"> Sim</label>


            <label for="radio-iluminacaonao"><input type="radio" name="iluminacao" value="iluminacaonao"
                    id="radio-iluminacaonao"> Não</label>

        </div>
        <p id="form1">
            <label asp-for="dataEvento">Informe a data de seu evento:</label>
            <input asp-for="dataEvento">
        </p>
        <div>
            <label for="mensagem">Mensagem</label>
            <input asp-for="mensagem" cols="30" rows="10" id="mensagem" class="input-padrao">
        </div>

        <p id="form1">
            <input type="submit" value="Cadastrar">
        </p>
    </form>
</section>